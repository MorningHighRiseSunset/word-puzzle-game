{
    "version": 2,
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd Frontend && npm install && npm run build && cd ../Backend && npm install"
    },
    "deploy": {
        "startCommand": "cd Backend && npm start",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
